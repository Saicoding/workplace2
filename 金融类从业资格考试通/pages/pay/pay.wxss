/* pages/pay/pay.wxss */
.mycontainer{
  padding: 50rpx 30rpx 30rpx 30rpx;
}
.up{
  width:100%;
  height:260rpx;
  display: float;
  float:left;
}

.bg{
  width: 100%;
  height: 100%;
}

.block1{
  position: absolute;
  width:100%;
  top:80rpx;
}

.block2{
  position: absolute;
  width:100%;
  top:370rpx;
}

.text1,.text2{
  display: block;
  width:690rpx;
  height:60rpx;
  text-align: center;
}

.text1{
  color:#dfe1e7;
  font-size:35rpx;
}

.text2{
  color:#f5f5f7;
  font-size:45rpx;
  letter-spacing: 4rpx;
  font-weight: bold;
}

.bt-block{
  width:100%;
  margin-top:30rpx;
}

.bt1,.bt2{
  display: float;
  float: left;
  color:white;
  width:200rpx;
  height:50rpx;
  font-size:28rpx;
  line-height: 50rpx;
  border-radius: 5rpx;
  text-align: center;
}

.bt1{
  background: #0097f7;
  margin-left:150rpx;
}

.bt2{
  background: #ff8b0e;
  margin-left:20rpx;
  letter-spacing: 2rpx;
}

.phone-container{
  display: float;
  float:left;
  width:40rpx;
  height:40rpx;
  margin-top:5rpx;
  margin-left:15rpx;
}

.phone{
  width:40rpx;
  height:40rpx;
}

.bt-text{
  display: float;
  float:left;
  height:40rpx;
  letter-spacing: 2rpx;
  margin-left:5rpx;
}

.down{
  clear: both;
  width:100%;
  height:260rpx;
  display: float;
  float:left;
  margin-top:25rpx;
}

.service{
  position: absolute;
  width:690rpx;
  padding-top:20rpx;
  text-align: center;
  top:330rpx;
  box-shadow: rgb(211, 206, 206) 3rpx 3rpx 8rpx 1rpx ;
}

.service-text1{
  width:690rpx;
  font-weight:bold;
  font-size:35rpx;
  letter-spacing: 6rpx;
  color:#204674;
}

.company{
  text-align: center;
  height:50rpx;
  display:table;
  margin:50rpx auto;
  line-height: 50rpx;
}

.company-name,.company-phone,.company-tel{
  display: float;
  float:left;
  font-size:30rpx;
}

.company-tel{
  margin-left:10rpx;
}

.company-name{
  font-size:38rpx;
  width:100%;
  text-align: center;
  margin:20rpx 0rpx 20rpx 0rpx;
}

.company-phone{
  width:36rpx;
  height:36rpx;
  margin-top:7rpx;
}

.select1{
  background: #98d2f7;
}

.select2{
  background: #fabe7d;
}
