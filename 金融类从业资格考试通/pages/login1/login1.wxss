/* 总框架 */

.container {
  margin: 0rpx;
  padding: 0rpx;
}

.big-img-container {
  width: 100%;
  text-align: center;
  margin-top: 150rpx;
}

.big-img {
  width: 500rpx;
}

.login {
  text-align: center;
}

.login-button-1 {
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 50rpx;
  border-radius: 45rpx;
  color: white;
  background: linear-gradient(to right,#ffd181,#fca40d);
  border:none;
}

.login-button-2 {
  width: 500rpx;
  height: 80rpx;
  margin-top: 50rpx;
  border-radius: 45rpx;
  line-height: 80rpx;
  color: white;
  background: linear-gradient(to right,#47c24f,#01ca0e);
  border:none;
}

.small-img-container {
  margin-left: 38rpx;
  display: float;
  float: left;
  width: 100rpx;
  height: 90rpx;
  vertical-align: middle;
}

.small-img-1 {
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
}

.small-img-2 {
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
}

.login-text {
  display: float;
  float: left;
  font-size: 30rpx;
  letter-spacing: 7rpx;
}

.select1 {
  background: rgb(5, 144, 243);
}

.select2 {
  background: #004405;
}
