/***********************章节目录************************/

.zhangjie {
  margin-top: 670rpx;
}

.block {
  clear: both;
  display: block;
  width: 750rpx;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.zhang-icon, .title, .answer_number {
  display: float;
  float: left;
}

.answer_number {
  float: right;
}

.zhang-icon {
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.title {
  margin-left: 25rpx;
  width: 530rpx;
  overflow-x: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.answer_number {
  width: 110rpx;
  font-size: 25rpx;
  margin-right: 20rpx;
  text-align: right;
}

.jie {
  /* hidden是为了实现点击后有动画效果 */
  height: 0rpx;
  overflow: hidden;
  opacity: 0;
  clear: both;
}

.jie_block {
  width: 100%;
  height:68rpx;
  line-height: 68rpx;
  font-size:30rpx;
  color:rgb(73, 73, 73);
  border:1rpx solid white;
}

.jie_title {
  display: float;
  float: left;
  width: 515rpx;
  height:68rpx;
  line-height: 68rpx;
  border-bottom: 1rpx dashed #eee;
  border-top:1rpx solid white;
  margin-left: 100rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.select {
  background-color: rgb(226, 226, 226);
}

