.wave1{
  position: absolute;
  top:172rpx;
  left:250rpx;
  width: 250rpx;
  height: 250rpx;
  border-radius: 250rpx;
  color: white;
  z-index: -1;
  text-align:center;
  animation: scaleout1 2s infinite ease-in-out;
}

.wave2{
  position: absolute;
  top:172rpx;
  left:250rpx;
  width: 250rpx;
  height: 250rpx;
  border-radius: 250rpx;
  color: white;
  z-index: -1;
  text-align:center;
  animation: scaleout2 2s infinite ease-in-out;
  animation-delay: 1s;
}

.center-block {
  width: 250rpx;
  height: 250rpx;
  border-radius: 250rpx;
  margin: 80rpx auto;
  color: white;
}

.center-text {
  display: float;
  float: left;
  width: 100%;
}

@keyframes scaleout1 {
  0% {
    transform: scale(1.0);
  }
  100% {
    transform: scale(1.2);
    opacity: 0;
  }
}

@keyframes scaleout2 {
  0% {
    transform: scale(1.0);
  }
  100% {
    transform: scale(1.2);
    opacity: 0;
  }
}

