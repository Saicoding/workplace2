<!--pages/tiku/modelReal/modelRealList/modelRealList.wxml-->
<view wx:if="{{isHasShiti && isLoaded}}" wx:for="{{modelList}}" wx:for-item="model" wx:key="in" wx:for-index="index">
  <view hover-class='select' hover-stay-time='300'>
    <view class="item" bindtap="GOModelRealDetail" data-id="{{model.id}}" data-times="{{model.times}}" data-totalscore="{{model.totalscore}}" data-test_score="{{model.test_score}}" data-title="{{model.title}}">
      <view class="circle" style="background:{{model.bgColor}}"></view>
      <view class="title">{{model.title}}</view>
      <view class="score">
        <text wx:if="{{model.ifDone}}" class="socre-text" style="color:{{model.scoreColor}}">{{model.test_score}}分</text>
        <image wx:if="{{!model.ifDone}}" class="score-img" src="/imgs/pen.png" mode="aspectFit"></image>
      </view>
    </view>
  </view>
</view>

<view wx:if="{{!isLoaded}}">
  <image class="loading-img" src="/imgs/timg.gif" mode="aspectFit" style = "margin-top:{{windowHeight/2-400}}rpx;"></image>
</view>

<view wx:if="{{!isHasShiti}}">
  <hasNoPage str="当前题库没有{{title}}"></hasNoPage>
</view>