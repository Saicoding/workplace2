  display: float;
  float:left;
}

.mytext{
  width:660rpx;
  height:80rpx;
  line-height: 80rpx;
}
.right-img{
  width:30rpx;
  height:30rpx;
  margin-top:25rpx;
}

.switch{
  display: float;
  float:left;
}

.wx-switch-input{width:83rpx !important;height:47rpx !important;}
.wx-switch-input::before{width:85rpx !important;height: 47rpx !important;}
