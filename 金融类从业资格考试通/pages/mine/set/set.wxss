}
.mycontainer{
  background: #f9f9f9;
  width:100%;
  margin-top:18rpx;
  height:300rpx;
}

.block{
  height:80rpx;
  width:100%;
  background: white;
  border-bottom:1rpx solid #ebebeb;
  line-height: 80rpx;
  font-size:30rpx;
  padding-left:40rpx;
}

