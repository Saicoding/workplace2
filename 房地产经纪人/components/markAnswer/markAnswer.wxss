/* components/markAnswer/markAnswer.wxss */
.container-out{
  width:90%;
  border:1px solid#f3f3f3;
  margin: 0 auto;
  z-index: 100;
  border-radius: 10rpx;
}

.container-in{
  border:1px solid#f3f3f3;
  width:90%;
  position:absolute;
  top:600rpx;
  background: #ffffff;
  z-index: 100;
  border-radius: 10rpx;
}

.icon{
  display: float;
  float:left;
  width:50rpx;
  height:50rpx;
  border:1rpx solid #9c9c9c;
  margin-left:20rpx;
  margin-top:20rpx;
  font-size:25rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 50rpx;
  margin-bottom:20rpx;
  justify-content:center;
}

.modal{
  position: absolute;
  top:0rpx;
  left:0rpx;
  width:100%;
  height:100%;
  filter:Alpha(Opacity=60);
  background-color:#1F1F1F;
  opacity: 0.5;
  z-index: 99;
}