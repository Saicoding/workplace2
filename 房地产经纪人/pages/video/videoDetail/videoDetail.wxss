  font-size:25rpx;
  margin-top:8rpx;
  text-align: center;
  border-radius:5rpx;
}

.youhui{
  width:150rpx;
  margin-left:250rpx;
  border:1rpx solid rgb(219, 24, 24);
  color:rgb(219, 24, 24);
}

.purchased{
  width:100rpx;
  margin-left:300rpx;
  color:white;
  background: #93df35;
}

