  width:520rpx;
  margin:0 auto;
}

.title1,.title2{
  display:float;
  float:left;
  font-size:30rpx;
  height:80rpx;
  line-height: 80rpx;
  color:#47a7e7;
  width:260rpx;
  text-align: center;
}

.blockMove{
  position: absolute;
  top:603rpx;
  left:405rpx;
  width:200rpx;
  border-bottom:6rpx solid #0197f7;
  border-radius: 6rpx;
}

.option{
  clear: both;
  margin-top:30rpx;
}

.info{
  padding:20rpx 20rpx 20rpx 20rpx;
  text-indent: 60rpx;
  font-size:30rpx;
  line-height: 54rpx;
}

.video-block{
  width:100%;
  height:100rpx;
}

.icon,.title-block,.myCanvas{
  display: float;
  float:left;
}

