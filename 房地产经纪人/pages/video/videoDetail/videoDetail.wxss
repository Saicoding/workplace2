.icon{
  width:35rpx;
  height:35rpx;
  margin-left:60rpx;
  margin-top:32rpx;
}

.title-block{
  width:600rpx;
  margin-left:40rpx;
  margin-top:15rpx;
}

.title,.view-time{
  display: float;
  float:left;
}

.title{
  font-size:28rpx;
  width:600rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; 
}

.view-time{
  background: #bfbfbf;
  padding:1rpx 6rpx 1rpx 6rpx;
  color:white;
  font-size:20rpx;
  width:auto;
  margin-top:5rpx;
}

.select{
  background: rgb(231, 231, 231);
}

.bottom{
  width:100%;
  height:80rpx;
  line-height: 80rpx;
